
@model UNIP.PIM.HelpDesk.DTO.SolicitacaoChamado.Solicitacao

<div class="card card-register mx-auto col-md-12">
    <div class="card-header">Incluir Solicitação</div>
    <div class="card-body">
    </div>
    @using (Html.BeginForm("Incluir", "Solicitacao", FormMethod.Post, new { @role = "form", @id = "frmSolicitacao" }))
    {
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-3">
                            <label for="exampleInputName">Código</label>
                            @Html.TextBoxFor(x => x.Codigo, new { @class = "form-control", @maxlength="50", required="true" })
                        </div>
                        <div class="col-md-1 text-center">
                            <label>Ativo</label><br />
                            @Html.CheckBoxFor(x => x.Ativo, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <label for="exampleInputName">Descrição</label>
                            @Html.TextBoxFor(x => x.Descricao, new { @class = "form-control", @maxlength = "100", @required = "true" })
                        </div>
                        <div class="col-md-3">
                            <label for="exampleInputPassword1">Grupo</label>
                            @Html.DropDownListFor(x => x.IdGrupo, (SelectList)ViewBag.Grupo, "Selecione", new { @class = "form-control", @required="true"  })
                        </div>
                        <div class="col-md-3">
                            <label for="exampleInputPassword1">SLA</label>
                            @Html.TextBoxFor(x => x.Sla, new { @class = "form-control", @required="true" })
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary pull-right">Salvar</button>&nbsp;
                    <a href="@Url.Action("Index")" class="btn btn-default pull-right">Cancelar</a>
                </div>
            </div>
        </div>
    }
</div>
@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
        });
    </script>
}
